<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelecaoProdutos">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/telaCreditos"
        android:text="@+string/telaCreditos"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/selecioneProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="@+string/selecioneProdutos"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/telaCreditos"

        />
    <Button
        android:id="@+id/item1"
        android:text="@+string/item1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/selecioneProdutos"
        />
    <Button
        android:id="@+id/item2"
        android:text="@+string/item2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/item1"/>
    <Button
        android:id="@+id/item3"
        android:text="@+string/item3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/item2"/>
    <TextView
        android:id="@+id/voceSelecionou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="@+string/voceSelecionou"
        app:layout_constraintTop_toBottomOf="@id/item3"
        android:background="@color/purple_200"
        android:layout_marginTop="30dp"
        />
    <ListView
        android:id="@+id/listaProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/voceSelecionou"
        app:layout_constraintBottom_toTopOf="@id/listaProdutos"
        />
    <Button
        android:id="@+id/confirm_button_produtos"
        android:text="@+string/aceitar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>